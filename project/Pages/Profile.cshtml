@page
@model project.Pages.ProfileModel
@{
    Layout = null;
    ViewData["Title"] = "Profile";
}
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile | Odyssey</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;1,400&family=Montserrat:wght@200;300;400;500;600&display=swap" rel="stylesheet">
    <style>
        .font-heading { font-family: 'Cormorant Garamond', serif; }
        .font-body { font-family: 'Montserrat', sans-serif; }
        
        /* Fade in animation */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .animate-fadeInUp {
            animation: fadeInUp 0.6s ease-out forwards;
        }
        
        /* Stagger animation delays */
        .delay-100 { animation-delay: 0.1s; }
        .delay-200 { animation-delay: 0.2s; }
        .delay-300 { animation-delay: 0.3s; }
        .delay-400 { animation-delay: 0.4s; }
        
        /* Glass effect for navbar */
        .glass-nav {
            background: rgba(12, 10, 9, 0.7);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }
        
        /* Trip card with season gradient on hover */
        .trip-card {
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        
        .trip-card .season-gradient {
            position: absolute;
            inset: 0;
            opacity: 0;
            transition: opacity 0.3s ease;
            pointer-events: none;
        }
        
        .trip-card:hover .season-gradient {
            opacity: 1;
        }
        
        .trip-card.spring:hover .season-gradient {
            background: linear-gradient(135deg, rgba(236, 72, 153, 0.2), transparent);
        }
        
        .trip-card.summer:hover .season-gradient {
            background: linear-gradient(135deg, rgba(245, 158, 11, 0.2), transparent);
        }
        
        .trip-card.autumn:hover .season-gradient {
            background: linear-gradient(135deg, rgba(249, 115, 22, 0.2), transparent);
        }
        
        .trip-card.winter:hover .season-gradient {
            background: linear-gradient(135deg, rgba(6, 182, 212, 0.2), transparent);
        }
        
        .trip-card:hover {
            transform: translateY(-5px) scale(1.02);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
        }
        
        /* Season badge pulse animation */
        @@keyframes pulse {
            0%, 100% { opacity: 1; transform: scale(1); }
            50% { opacity: 0.8; transform: scale(1.05); }
        }
        
        .trip-card:hover .season-badge {
            animation: pulse 2s ease-in-out infinite;
        }
    </style>
</head>
<body class="bg-stone-950 text-stone-100 font-body min-h-screen">
    <!-- Navigation - Matching Main Page -->
    <nav class="fixed w-full z-50 glass-nav py-4">
        <div class="max-w-7xl mx-auto px-6 flex justify-between items-center">
            <a href="/" class="text-2xl font-heading font-bold tracking-wider text-white flex items-center gap-2 group">
                <i data-lucide="compass" class="w-6 h-6 text-amber-200 group-hover:rotate-45 transition-transform duration-500"></i>
                ODYSSEY
            </a>
            
            <div class="flex items-center gap-6">
                <a href="/" class="text-stone-400 hover:text-white text-sm transition-colors flex items-center gap-2">
                    <i data-lucide="home" class="w-4 h-4"></i>
                    <span class="hidden md:inline">Home</span>
                </a>
                <a href="/Cart" class="text-stone-400 hover:text-white text-sm transition-colors flex items-center gap-2">
                    <i data-lucide="shopping-bag" class="w-4 h-4"></i>
                    <span class="hidden md:inline">Cart</span>
                </a>
                <a href="/Bookings" class="text-stone-400 hover:text-white text-sm transition-colors flex items-center gap-2">
                    <i data-lucide="calendar" class="w-4 h-4"></i>
                    <span class="hidden md:inline">My Trips</span>
                </a>
                <a href="/Profile" class="text-amber-200 text-sm transition-colors flex items-center gap-2">
                    <i data-lucide="user" class="w-4 h-4"></i>
                    <span class="hidden md:inline">Profile</span>
                </a>
                <a href="/Account/Logout" class="text-stone-400 hover:text-white text-sm transition-colors flex items-center gap-2">
                    <i data-lucide="log-out" class="w-4 h-4"></i>
                    <span class="hidden md:inline">Logout</span>
                </a>
            </div>
        </div>
    </nav>

    <main class="pt-24 pb-12 px-6">
        <div class="max-w-6xl mx-auto">
            <!-- Profile Header -->
            <div class="bg-stone-900/50 backdrop-blur-xl rounded-lg border border-white/10 p-8 mb-8 animate-fadeInUp">
                <div class="flex items-center gap-6">
                    <div class="w-24 h-24 rounded-full bg-gradient-to-br from-amber-400 to-amber-600 flex items-center justify-center text-3xl font-heading font-bold text-stone-900">
                        @Model.UserProfile.FirstName.Substring(0, 1)@Model.UserProfile.LastName.Substring(0, 1)
                    </div>
                    <div class="flex-grow">
                        <h1 class="text-3xl font-heading text-white mb-2">@Model.UserProfile.FirstName @Model.UserProfile.LastName</h1>
                        <p class="text-stone-400">@Model.UserProfile.Email</p>
                        @if (!string.IsNullOrEmpty(Model.UserProfile.PhoneNumber))
                        {
                            <p class="text-stone-400">@Model.UserProfile.PhoneNumber</p>
                        }
                    </div>
                    <div class="text-right">
                        <div class="text-sm text-stone-500 mb-1">Member since</div>
                        <div class="text-lg text-white">@Model.UserProfile.CreatedAt.ToString("MMMM yyyy")</div>
                    </div>
                </div>
            </div>

            <!-- Statistics -->
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
                <div class="bg-stone-900/50 backdrop-blur-xl rounded-lg border border-white/10 p-6 text-center animate-fadeInUp delay-100 opacity-0">
                    <i data-lucide="map-pin" class="w-8 h-8 text-amber-400 mx-auto mb-2"></i>
                    <div class="text-2xl font-heading text-white mb-1">@Model.TotalBookings</div>
                    <div class="text-sm text-stone-400">Total Trips</div>
                </div>
                <div class="bg-stone-900/50 backdrop-blur-xl rounded-lg border border-white/10 p-6 text-center animate-fadeInUp delay-200 opacity-0">
                    <i data-lucide="check-circle" class="w-8 h-8 text-green-400 mx-auto mb-2"></i>
                    <div class="text-2xl font-heading text-white mb-1">@Model.CompletedBookings</div>
                    <div class="text-sm text-stone-400">Completed</div>
                </div>
                <div class="bg-stone-900/50 backdrop-blur-xl rounded-lg border border-white/10 p-6 text-center animate-fadeInUp delay-300 opacity-0">
                    <i data-lucide="clock" class="w-8 h-8 text-yellow-400 mx-auto mb-2"></i>
                    <div class="text-2xl font-heading text-white mb-1">@Model.PendingBookings</div>
                    <div class="text-sm text-stone-400">Upcoming</div>
                </div>
                <div class="bg-stone-900/50 backdrop-blur-xl rounded-lg border border-white/10 p-6 text-center animate-fadeInUp delay-400 opacity-0">
                    <i data-lucide="dollar-sign" class="w-8 h-8 text-amber-400 mx-auto mb-2"></i>
                    <div class="text-2xl font-heading text-white mb-1">$@Model.TotalSpent.ToString("N0")</div>
                    <div class="text-sm text-stone-400">Total Spent</div>
                </div>
            </div>

            <!-- My Trips by Season -->
            <h2 class="text-2xl font-heading text-white mb-6 animate-fadeInUp">My Trips</h2>
            
            @if (!Model.Bookings.Any())
            {
                <div class="text-center py-16 animate-fadeInUp delay-100">
                    <i data-lucide="calendar" class="w-16 h-16 text-stone-700 mx-auto mb-4"></i>
                    <h3 class="text-xl font-heading text-stone-400 mb-2">No trips booked yet</h3>
                    <p class="text-stone-500 mb-6">Start your journey with us</p>
                    <a href="/" class="inline-block px-6 py-3 bg-amber-200 hover:bg-amber-100 rounded text-stone-900 font-bold transition-colors">
                        Explore Destinations
                    </a>
                </div>
            }
            else
            {
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    @{ var tripIndex = 0; }
                    @foreach (var booking in Model.Bookings)
                    {
                        var delayClass = $"delay-{Math.Min((tripIndex + 1) * 100, 400)}";
                        var seasonClass = booking.TravelPackage.Season.ToLower();
                        var seasonIcon = booking.TravelPackage.Season switch
                        {
                            "spring" => "flower-2",
                            "summer" => "sun",
                            "autumn" => "leaf",
                            "winter" => "snowflake",
                            _ => "map-pin"
                        };
                        var seasonColor = booking.TravelPackage.Season switch
                        {
                            "spring" => "text-pink-300",
                            "summer" => "text-amber-300",
                            "autumn" => "text-orange-300",
                            "winter" => "text-cyan-300",
                            _ => "text-stone-300"
                        };
                        var seasonBadgeClass = booking.TravelPackage.Season switch
                        {
                            "spring" => "bg-pink-400/30 text-pink-200 border-pink-400/50",
                            "summer" => "bg-amber-400/30 text-amber-200 border-amber-400/50",
                            "autumn" => "bg-orange-400/30 text-orange-200 border-orange-400/50",
                            "winter" => "bg-cyan-400/30 text-cyan-200 border-cyan-400/50",
                            _ => "bg-stone-400/30 text-stone-200 border-stone-400/50"
                        };
                        
                        <div class="trip-card @seasonClass bg-stone-900/50 backdrop-blur-xl rounded-lg border border-white/10 overflow-hidden animate-fadeInUp @delayClass opacity-0">
                            <div class="season-gradient"></div>
                            <div class="relative z-10">
                                <div class="h-48 overflow-hidden">
                                    <img src="@booking.TravelPackage.ImageUrl" alt="@booking.TravelPackage.Destination" 
                                         class="w-full h-full object-cover">
                                </div>
                                <div class="p-4">
                                    <div class="flex items-center gap-2 mb-3">
                                        <span class="season-badge text-xs uppercase tracking-wider px-2 py-1 rounded-full border backdrop-blur-sm @seasonBadgeClass flex items-center gap-1">
                                            <i data-lucide="@seasonIcon" class="w-3 h-3"></i>
                                            @booking.TravelPackage.Season
                                        </span>
                                        @if (booking.Status == project.Models.BookingStatus.Confirmed)
                                        {
                                            <span class="text-xs uppercase tracking-wider px-2 py-1 rounded-full border bg-green-400/20 text-green-300 border-green-400/50">
                                                Confirmed
                                            </span>
                                        }
                                    </div>
                                    <h3 class="text-xl font-heading text-white mb-1 @seasonColor">@booking.TravelPackage.Destination</h3>
                                    <p class="text-stone-400 text-sm mb-3">@booking.TravelPackage.Description</p>
                                    <div class="flex justify-between items-center text-sm">
                                        <span class="text-stone-500">@booking.StartDate.ToString("MMM d, yyyy")</span>
                                        <span class="text-amber-200 font-semibold">$@booking.TotalPrice.ToString("N0")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        tripIndex++;
                    }
                </div>
            }
        </div>
    </main>
    
    <script>
        lucide.createIcons();
    </script>
</body>
</html>
