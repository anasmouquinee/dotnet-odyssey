@page
@model project.Pages.BookingsModel
@{
    Layout = null;
    ViewData["Title"] = "My Bookings";
}
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Bookings | Odyssey</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;1,400&family=Montserrat:wght@200;300;400;500;600&display=swap" rel="stylesheet">
    <style>
        .font-heading { font-family: 'Cormorant Garamond', serif; }
        .font-body { font-family: 'Montserrat', sans-serif; }
        
        /* Fade in animation */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .animate-fadeInUp {
            animation: fadeInUp 0.6s ease-out forwards;
        }
        
        /* Stagger animation delays */
        .delay-100 { animation-delay: 0.1s; }
        .delay-200 { animation-delay: 0.2s; }
        .delay-300 { animation-delay: 0.3s; }
        .delay-400 { animation-delay: 0.4s; }
        
        /* Glass effect for navbar */
        .glass-nav {
            background: rgba(12, 10, 9, 0.7);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }
        
        /* Card hover effect */
        .booking-item {
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        
        .booking-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }
        
        /* Season overlay on hover */
        .booking-item .season-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            transition: opacity 0.3s ease;
            pointer-events: none;
            z-index: 0;
        }
        
        .booking-item:hover .season-overlay {
            opacity: 0.1;
        }
        
        .booking-item.season-spring:hover .season-overlay {
            background: radial-gradient(circle at top left, #ec4899, transparent);
        }
        
        .booking-item.season-summer:hover .season-overlay {
            background: radial-gradient(circle at top left, #f59e0b, transparent);
        }
        
        .booking-item.season-autumn:hover .season-overlay {
            background: radial-gradient(circle at top left, #f97316, transparent);
        }
        
        .booking-item.season-winter:hover .season-overlay {
            background: radial-gradient(circle at top left, #06b6d4, transparent);
        }
        
        .booking-content {
            position: relative;
            z-index: 1;
        }
    </style>
</head>
<body class="bg-stone-950 text-stone-100 font-body min-h-screen">
    <!-- Navigation - Matching Main Page -->
    <nav class="fixed w-full z-50 glass-nav py-4">
        <div class="max-w-7xl mx-auto px-6 flex justify-between items-center">
            <a href="/" class="text-2xl font-heading font-bold tracking-wider text-white flex items-center gap-2 group">
                <i data-lucide="compass" class="w-6 h-6 text-amber-200 group-hover:rotate-45 transition-transform duration-500"></i>
                ODYSSEY
            </a>
            
            <div class="flex items-center gap-6">
                <a href="/" class="text-stone-400 hover:text-white text-sm transition-colors flex items-center gap-2">
                    <i data-lucide="home" class="w-4 h-4"></i>
                    <span class="hidden md:inline">Home</span>
                </a>
                <a href="/Cart" class="text-stone-400 hover:text-white text-sm transition-colors flex items-center gap-2">
                    <i data-lucide="shopping-bag" class="w-4 h-4"></i>
                    <span class="hidden md:inline">Cart</span>
                </a>
                <a href="/Bookings" class="text-amber-200 text-sm transition-colors flex items-center gap-2">
                    <i data-lucide="calendar" class="w-4 h-4"></i>
                    <span class="hidden md:inline">My Trips</span>
                </a>
                <a href="/Profile" class="text-stone-400 hover:text-white text-sm transition-colors flex items-center gap-2">
                    <i data-lucide="user" class="w-4 h-4"></i>
                    <span class="hidden md:inline">Profile</span>
                </a>
                <a href="/Account/Logout" class="text-stone-400 hover:text-white text-sm transition-colors flex items-center gap-2">
                    <i data-lucide="log-out" class="w-4 h-4"></i>
                    <span class="hidden md:inline">Logout</span>
                </a>
            </div>
        </div>
    </nav>

    <main class="pt-24 pb-12 px-6">
        <div class="max-w-5xl mx-auto">
            <h1 class="text-4xl font-heading text-white mb-8 animate-fadeInUp">My Bookings</h1>
            
            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="bg-green-500/20 border border-green-500/50 text-green-200 px-4 py-3 rounded mb-6 animate-fadeInUp delay-100">
                    @Model.SuccessMessage
                </div>
            }
            
            @if (!Model.Bookings.Any())
            {
                <div class="text-center py-16 animate-fadeInUp delay-100">
                    <i data-lucide="calendar" class="w-16 h-16 text-stone-700 mx-auto mb-4"></i>
                    <h2 class="text-2xl font-heading text-stone-400 mb-2">No bookings yet</h2>
                    <p class="text-stone-500 mb-6">Start planning your next adventure</p>
                    <a href="/" class="inline-block px-6 py-3 bg-amber-200 hover:bg-amber-100 rounded text-stone-900 font-bold transition-colors">
                        Explore Destinations
                    </a>
                </div>
            }
            else
            {
                <div class="space-y-4">
                    @{ var bookingIndex = 0; }
                    @foreach (var booking in Model.Bookings)
                    {
                        var delayClass = $"delay-{Math.Min((bookingIndex + 1) * 100, 400)}";
                        var seasonClass = $"season-{booking.TravelPackage.Season}";
                        var seasonColorClass = booking.TravelPackage.Season switch
                        {
                            "spring" => "bg-pink-400/20 text-pink-300 border-pink-400/50",
                            "summer" => "bg-amber-400/20 text-amber-300 border-amber-400/50",
                            "autumn" => "bg-orange-400/20 text-orange-300 border-orange-400/50",
                            "winter" => "bg-cyan-400/20 text-cyan-300 border-cyan-400/50",
                            _ => "bg-stone-400/20 text-stone-300 border-stone-400/50"
                        };
                        var statusColorClass = booking.Status switch
                        {
                            project.Models.BookingStatus.Pending => "bg-yellow-400/20 text-yellow-300 border-yellow-400/50",
                            project.Models.BookingStatus.Confirmed => "bg-green-400/20 text-green-300 border-green-400/50",
                            project.Models.BookingStatus.Cancelled => "bg-red-400/20 text-red-300 border-red-400/50",
                            _ => "bg-blue-400/20 text-blue-300 border-blue-400/50"
                        };
                        
                        <div class="booking-item @seasonClass bg-stone-900/50 backdrop-blur-xl rounded-lg border border-white/10 p-6 @(booking.Status == project.Models.BookingStatus.Cancelled ? "opacity-60" : "") animate-fadeInUp @delayClass opacity-0">
                            <div class="season-overlay"></div>
                            <div class="booking-content flex gap-6">
                                <img src="@booking.TravelPackage.ImageUrl" alt="@booking.TravelPackage.Destination" 
                                     class="w-40 h-32 object-cover rounded-lg flex-shrink-0">
                                
                                <div class="flex-grow">
                                    <div class="flex justify-between items-start mb-3">
                                        <div>
                                            <div class="flex items-center gap-2 mb-2">
                                                <span class="text-xs uppercase tracking-wider px-2 py-1 rounded-full border @seasonColorClass">
                                                    @booking.TravelPackage.Season.ToUpper()
                                                </span>
                                                <span class="text-xs uppercase tracking-wider px-2 py-1 rounded-full border @statusColorClass">
                                                    @booking.Status.ToString().ToUpper()
                                                </span>
                                            </div>
                                            <h3 class="text-xl font-heading text-white">@booking.TravelPackage.Destination</h3>
                                            <p class="text-stone-400 text-sm">@booking.TravelPackage.Description</p>
                                        </div>
                                        <span class="text-2xl font-heading text-amber-200">$@booking.TotalPrice.ToString("N0")</span>
                                    </div>
                                    
                                    <div class="grid grid-cols-4 gap-4 text-sm">
                                        <div>
                                            <span class="text-stone-500 block">Travel Dates</span>
                                            <span class="text-white">@booking.StartDate.ToString("MMM d") - @booking.EndDate.ToString("MMM d, yyyy")</span>
                                        </div>
                                        <div>
                                            <span class="text-stone-500 block">Guests</span>
                                            <span class="text-white">@booking.NumberOfGuests</span>
                                        </div>
                                        <div>
                                            <span class="text-stone-500 block">Booked On</span>
                                            <span class="text-white">@booking.BookedAt.ToString("MMM d, yyyy")</span>
                                        </div>
                                        <div class="text-right">
                                            @if (booking.Status != project.Models.BookingStatus.Cancelled)
                                            {
                                                <div class="flex justify-end gap-2">
                                                    <a href="/Bookings/Edit/@booking.Id" class="px-3 py-1 border border-white/20 rounded text-sm hover:bg-white/10 transition-colors">
                                                        Edit
                                                    </a>
                                                    <form method="post" asp-page-handler="Cancel" class="inline">
                                                        <input type="hidden" name="bookingId" value="@booking.Id" />
                                                        <button type="submit" class="px-3 py-1 border border-red-400/30 text-red-400 rounded text-sm hover:bg-red-400/10 transition-colors">
                                                            Cancel
                                                        </button>
                                                    </form>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        bookingIndex++;
                    }
                </div>
            }
        </div>
    </main>
    
    <script>
        lucide.createIcons();
    </script>
</body>
</html>
