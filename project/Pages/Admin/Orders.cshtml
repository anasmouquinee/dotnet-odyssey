@page
@model project.Pages.Admin.OrdersModel
@{
    Layout = null;
    ViewData["Title"] = "Manage Orders";
}
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Orders | Odyssey Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;1,400&family=Montserrat:wght@200;300;400;500;600&display=swap" rel="stylesheet">
    <style>
        .font-heading { font-family: 'Cormorant Garamond', serif; }
        .font-body { font-family: 'Montserrat', sans-serif; }
        .glass-nav { background: rgba(12, 10, 9, 0.9); backdrop-filter: blur(12px); border-bottom: 1px solid rgba(255, 255, 255, 0.05); }
    </style>
</head>
<body class="bg-stone-950 text-stone-100 font-body min-h-screen">
    <!-- Admin Navigation -->
    <nav class="fixed w-full z-50 glass-nav py-4">
        <div class="max-w-7xl mx-auto px-6 flex justify-between items-center">
            <div class="flex items-center gap-4">
                <a href="/" class="text-2xl font-heading font-bold tracking-wider text-white flex items-center gap-2 group">
                    <i data-lucide="compass" class="w-6 h-6 text-amber-200 group-hover:rotate-45 transition-transform duration-500"></i>
                    ODYSSEY
                </a>
                <span class="text-xs uppercase tracking-wider px-3 py-1 bg-amber-400/20 text-amber-300 rounded-full border border-amber-400/30">Admin</span>
            </div>
            <div class="flex items-center gap-6">
                <a href="/Admin" class="text-stone-400 hover:text-white text-sm flex items-center gap-2"><i data-lucide="layout-dashboard" class="w-4 h-4"></i>Dashboard</a>
                <a href="/Admin/Packages" class="text-stone-400 hover:text-white text-sm flex items-center gap-2"><i data-lucide="package" class="w-4 h-4"></i>Packages</a>
                <a href="/Admin/Orders" class="text-amber-200 text-sm flex items-center gap-2"><i data-lucide="shopping-cart" class="w-4 h-4"></i>Orders</a>
                <a href="/Admin/Users" class="text-stone-400 hover:text-white text-sm flex items-center gap-2"><i data-lucide="users" class="w-4 h-4"></i>Users</a>
                <a href="/" class="text-stone-400 hover:text-white text-sm flex items-center gap-2"><i data-lucide="globe" class="w-4 h-4"></i>View Site</a>
            </div>
        </div>
    </nav>

    <main class="pt-24 pb-12 px-6">
        <div class="max-w-7xl mx-auto">
            <!-- Header -->
            <div class="flex justify-between items-center mb-8">
                <div>
                    <h1 class="text-4xl font-heading text-white mb-2">Manage Orders</h1>
                    <p class="text-stone-400">View and manage customer bookings</p>
                </div>
            </div>
            
            <!-- Filters -->
            <div class="flex gap-2 mb-6">
                <a href="/Admin/Orders" class="px-4 py-2 rounded-full text-sm transition-colors @(string.IsNullOrEmpty(Model.StatusFilter) ? "bg-amber-200 text-stone-900" : "bg-white/10 text-white hover:bg-white/20")">
                    All (@Model.Bookings.Count)
                </a>
                <a href="/Admin/Orders?status=pending" class="px-4 py-2 rounded-full text-sm transition-colors @(Model.StatusFilter == "pending" ? "bg-yellow-400 text-stone-900" : "bg-white/10 text-white hover:bg-white/20")">
                    Pending (@Model.Bookings.Count(b => b.Status == project.Models.BookingStatus.Pending))
                </a>
                <a href="/Admin/Orders?status=confirmed" class="px-4 py-2 rounded-full text-sm transition-colors @(Model.StatusFilter == "confirmed" ? "bg-green-400 text-stone-900" : "bg-white/10 text-white hover:bg-white/20")">
                    Confirmed (@Model.Bookings.Count(b => b.Status == project.Models.BookingStatus.Confirmed))
                </a>
                <a href="/Admin/Orders?status=cancelled" class="px-4 py-2 rounded-full text-sm transition-colors @(Model.StatusFilter == "cancelled" ? "bg-red-400 text-stone-900" : "bg-white/10 text-white hover:bg-white/20")">
                    Cancelled (@Model.Bookings.Count(b => b.Status == project.Models.BookingStatus.Cancelled))
                </a>
            </div>
            
            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="bg-green-500/20 border border-green-500/50 text-green-200 px-4 py-3 rounded mb-6">
                    @Model.SuccessMessage
                </div>
            }
            
            <!-- Orders Table -->
            <div class="bg-stone-900/50 backdrop-blur-xl rounded-lg border border-white/10 overflow-hidden">
                <table class="w-full">
                    <thead>
                        <tr class="border-b border-white/10">
                            <th class="text-left p-4 text-xs uppercase tracking-wider text-stone-400">Order</th>
                            <th class="text-left p-4 text-xs uppercase tracking-wider text-stone-400">Customer</th>
                            <th class="text-left p-4 text-xs uppercase tracking-wider text-stone-400">Destination</th>
                            <th class="text-left p-4 text-xs uppercase tracking-wider text-stone-400">Dates</th>
                            <th class="text-left p-4 text-xs uppercase tracking-wider text-stone-400">Amount</th>
                            <th class="text-left p-4 text-xs uppercase tracking-wider text-stone-400">Status</th>
                            <th class="text-left p-4 text-xs uppercase tracking-wider text-stone-400">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.FilteredBookings.Any())
                        {
                            <tr>
                                <td colspan="7" class="p-8 text-center text-stone-500">No orders found</td>
                            </tr>
                        }
                        @foreach (var booking in Model.FilteredBookings)
                        {
                            var statusClass = booking.Status switch
                            {
                                project.Models.BookingStatus.Pending => "bg-yellow-400/20 text-yellow-300 border-yellow-400/50",
                                project.Models.BookingStatus.Confirmed => "bg-green-400/20 text-green-300 border-green-400/50",
                                project.Models.BookingStatus.Cancelled => "bg-red-400/20 text-red-300 border-red-400/50",
                                _ => "bg-blue-400/20 text-blue-300 border-blue-400/50"
                            };
                            var seasonClass = booking.TravelPackage?.Season switch
                            {
                                "spring" => "text-pink-300",
                                "summer" => "text-amber-300",
                                "autumn" => "text-orange-300",
                                "winter" => "text-cyan-300",
                                _ => "text-stone-300"
                            };
                            
                            <tr class="border-b border-white/5 hover:bg-white/5 transition-colors">
                                <td class="p-4">
                                    <span class="text-white font-medium">#@booking.Id</span>
                                    <div class="text-xs text-stone-500">@booking.BookedAt.ToString("MMM d, yyyy")</div>
                                </td>
                                <td class="p-4">
                                    <div class="text-white">@booking.User?.FirstName @booking.User?.LastName</div>
                                    <div class="text-xs text-stone-500">@booking.User?.Email</div>
                                </td>
                                <td class="p-4">
                                    <div class="flex items-center gap-3">
                                        <img src="@booking.TravelPackage?.ImageUrl" alt="" class="w-12 h-12 rounded object-cover">
                                        <div>
                                            <div class="text-white @seasonClass">@booking.TravelPackage?.Destination</div>
                                            <div class="text-xs text-stone-500 capitalize">@booking.TravelPackage?.Season</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="p-4">
                                    <div class="text-white text-sm">@booking.StartDate.ToString("MMM d") - @booking.EndDate.ToString("MMM d")</div>
                                    <div class="text-xs text-stone-500">@booking.NumberOfGuests guests</div>
                                </td>
                                <td class="p-4">
                                    <div class="text-xl font-heading text-amber-200">$@booking.TotalPrice.ToString("N0")</div>
                                </td>
                                <td class="p-4">
                                    <span class="text-xs uppercase tracking-wider px-2 py-1 rounded-full border @statusClass">
                                        @booking.Status
                                    </span>
                                </td>
                                <td class="p-4">
                                    @if (booking.Status == project.Models.BookingStatus.Pending)
                                    {
                                        <div class="flex gap-2">
                                            <form method="post" asp-page-handler="UpdateStatus">
                                                <input type="hidden" name="bookingId" value="@booking.Id" />
                                                <input type="hidden" name="status" value="Confirmed" />
                                                <button type="submit" class="px-3 py-1 bg-green-500/20 text-green-300 rounded text-xs hover:bg-green-500/30 transition-colors">
                                                    Confirm
                                                </button>
                                            </form>
                                            <form method="post" asp-page-handler="UpdateStatus">
                                                <input type="hidden" name="bookingId" value="@booking.Id" />
                                                <input type="hidden" name="status" value="Cancelled" />
                                                <button type="submit" class="px-3 py-1 bg-red-500/20 text-red-300 rounded text-xs hover:bg-red-500/30 transition-colors">
                                                    Cancel
                                                </button>
                                            </form>
                                        </div>
                                    }
                                    else if (booking.Status == project.Models.BookingStatus.Confirmed)
                                    {
                                        <form method="post" asp-page-handler="UpdateStatus">
                                            <input type="hidden" name="bookingId" value="@booking.Id" />
                                            <input type="hidden" name="status" value="Completed" />
                                            <button type="submit" class="px-3 py-1 bg-blue-500/20 text-blue-300 rounded text-xs hover:bg-blue-500/30 transition-colors">
                                                Complete
                                            </button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </main>
    
    <script>
        lucide.createIcons();
    </script>
</body>
</html>
