@page
@model project.Pages.CartModel
@{
    Layout = null;
    ViewData["Title"] = "My Cart";
}
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Cart | Odyssey</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;1,400&family=Montserrat:wght@200;300;400;500;600&display=swap" rel="stylesheet">
    <style>
        .font-heading { font-family: 'Cormorant Garamond', serif; }
        .font-body { font-family: 'Montserrat', sans-serif; }
        
        /* Fade in animation */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .animate-fadeInUp {
            animation: fadeInUp 0.6s ease-out forwards;
        }
        
        /* Stagger animation delays */
        .delay-100 { animation-delay: 0.1s; }
        .delay-200 { animation-delay: 0.2s; }
        .delay-300 { animation-delay: 0.3s; }
        .delay-400 { animation-delay: 0.4s; }
        
        /* Glass effect for navbar */
        .glass-nav {
            background: rgba(12, 10, 9, 0.7);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }
        
        /* Card hover effect */
        .cart-item {
            transition: all 0.3s ease;
        }
        
        .cart-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }
    </style>
</head>
<body class="bg-stone-950 text-stone-100 font-body min-h-screen">
    <!-- Navigation - Matching Main Page -->
    <nav class="fixed w-full z-50 glass-nav py-4">
        <div class="max-w-7xl mx-auto px-6 flex justify-between items-center">
            <a href="/" class="text-2xl font-heading font-bold tracking-wider text-white flex items-center gap-2 group">
                <i data-lucide="compass" class="w-6 h-6 text-amber-200 group-hover:rotate-45 transition-transform duration-500"></i>
                ODYSSEY
            </a>
            
            <div class="flex items-center gap-6">
                <a href="/" class="text-stone-400 hover:text-white text-sm transition-colors flex items-center gap-2">
                    <i data-lucide="home" class="w-4 h-4"></i>
                    <span class="hidden md:inline">Home</span>
                </a>
                <a href="/Cart" class="text-amber-200 text-sm transition-colors flex items-center gap-2">
                    <i data-lucide="shopping-bag" class="w-4 h-4"></i>
                    <span class="hidden md:inline">Cart</span>
                    @if (Model.CartItems.Any())
                    {
                        <span class="bg-amber-400 text-stone-900 text-xs font-bold w-5 h-5 rounded-full flex items-center justify-center">
                            @Model.CartItems.Count
                        </span>
                    }
                </a>
                <a href="/Bookings" class="text-stone-400 hover:text-white text-sm transition-colors flex items-center gap-2">
                    <i data-lucide="calendar" class="w-4 h-4"></i>
                    <span class="hidden md:inline">My Trips</span>
                </a>
                <a href="/Profile" class="text-stone-400 hover:text-white text-sm transition-colors flex items-center gap-2">
                    <i data-lucide="user" class="w-4 h-4"></i>
                    <span class="hidden md:inline">Profile</span>
                </a>
                <a href="/Account/Logout" class="text-stone-400 hover:text-white text-sm transition-colors flex items-center gap-2">
                    <i data-lucide="log-out" class="w-4 h-4"></i>
                    <span class="hidden md:inline">Logout</span>
                </a>
            </div>
        </div>
    </nav>

    <main class="pt-24 pb-12 px-6">
        <div class="max-w-5xl mx-auto">
            <div class="flex items-center justify-between mb-8 animate-fadeInUp">
                <h1 class="text-4xl font-heading text-white">My Travel Cart</h1>
                <a href="/" class="text-amber-200 hover:text-amber-100 text-sm flex items-center gap-2 transition-colors">
                    <i data-lucide="plus" class="w-4 h-4"></i>
                    Add more trips
                </a>
            </div>
            
            @if (!Model.CartItems.Any())
            {
                <div class="text-center py-16 animate-fadeInUp delay-100">
                    <i data-lucide="shopping-bag" class="w-16 h-16 text-stone-700 mx-auto mb-4"></i>
                    <h2 class="text-2xl font-heading text-stone-400 mb-2">Your cart is empty</h2>
                    <p class="text-stone-500 mb-6">Start exploring our seasonal escapes</p>
                    <a href="/" class="inline-block px-6 py-3 bg-amber-200 hover:bg-amber-100 rounded text-stone-900 font-bold transition-colors">
                        Browse Destinations
                    </a>
                </div>
            }
            else
            {
                <div class="space-y-4 mb-8">
                    @{ var itemIndex = 0; }
                    @foreach (var item in Model.CartItems)
                    {
                        var delayClass = $"delay-{Math.Min((itemIndex + 1) * 100, 400)}";
                        var seasonColorClass = item.TravelPackage.Season switch
                        {
                            "spring" => "bg-pink-400/20 text-pink-300 border-pink-400/50",
                            "summer" => "bg-amber-400/20 text-amber-300 border-amber-400/50",
                            "autumn" => "bg-orange-400/20 text-orange-300 border-orange-400/50",
                            "winter" => "bg-cyan-400/20 text-cyan-300 border-cyan-400/50",
                            _ => "bg-stone-400/20 text-stone-300 border-stone-400/50"
                        };
                        
                        <div class="cart-item bg-stone-900/50 backdrop-blur-xl rounded-lg border border-white/10 p-6 animate-fadeInUp @delayClass opacity-0">
                            <div class="flex gap-6">
                                <img src="@item.TravelPackage.ImageUrl" alt="@item.TravelPackage.Destination" 
                                     class="w-32 h-32 object-cover rounded-lg flex-shrink-0">
                                
                                <div class="flex-grow">
                                    <div class="flex justify-between items-start mb-3">
                                        <div>
                                            <span class="text-xs uppercase tracking-wider px-2 py-1 rounded-full border @seasonColorClass">
                                                @item.TravelPackage.Season.ToUpper()
                                            </span>
                                            <h3 class="text-xl font-heading text-white mt-2">@item.TravelPackage.Destination</h3>
                                            <p class="text-stone-400 text-sm">@item.TravelPackage.Description</p>
                                        </div>
                                        <form method="post" asp-page-handler="Remove" class="inline">
                                            <input type="hidden" name="cartItemId" value="@item.Id" />
                                            <button type="submit" class="text-stone-500 hover:text-red-400 transition-colors">
                                                <i data-lucide="trash-2" class="w-5 h-5"></i>
                                            </button>
                                        </form>
                                    </div>
                                    
                                    <div class="grid grid-cols-3 gap-4 text-sm">
                                        <div>
                                            <span class="text-stone-500 block">Dates</span>
                                            <span class="text-white">@item.SelectedStartDate.ToString("MMM d") - @item.SelectedEndDate.ToString("MMM d, yyyy")</span>
                                        </div>
                                        <div>
                                            <span class="text-stone-500 block">Guests</span>
                                            <span class="text-white">@item.NumberOfGuests @(item.NumberOfGuests == 1 ? "Guest" : "Guests")</span>
                                        </div>
                                        <div class="text-right">
                                            <span class="text-stone-500 block">Total</span>
                                            <span class="text-xl font-heading text-amber-200">$@((item.TravelPackage.Price * item.NumberOfGuests).ToString("N0"))</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        itemIndex++;
                    }
                </div>
                
                <!-- Cart Summary -->
                <div class="bg-stone-900/50 backdrop-blur-xl rounded-lg border border-white/10 p-6 animate-fadeInUp delay-400 opacity-0">
                    <div class="flex justify-between items-center mb-6">
                        <span class="text-stone-400">Subtotal (@Model.CartItems.Count @(Model.CartItems.Count == 1 ? "trip" : "trips"))</span>
                        <span class="text-2xl font-heading text-white">$@Model.CartTotal.ToString("N0")</span>
                    </div>
                    
                    <form method="post" asp-page-handler="Checkout">
                        <button type="submit" class="w-full px-6 py-4 bg-amber-200 hover:bg-amber-100 rounded text-stone-900 font-bold tracking-wide transition-all text-lg">
                            Proceed to Checkout
                        </button>
                    </form>
                    
                    <p class="text-stone-500 text-xs text-center mt-4">
                        You will receive a confirmation email after checkout
                    </p>
                </div>
            }
        </div>
    </main>
    
    <script>
        lucide.createIcons();
    </script>
</body>
</html>
