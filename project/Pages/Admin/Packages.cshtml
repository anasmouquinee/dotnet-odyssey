@page
@model project.Pages.Admin.PackagesModel
@{
    Layout = null;
    ViewData["Title"] = "Manage Packages";
}
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Packages | Odyssey Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;1,400&family=Montserrat:wght@200;300;400;500;600&display=swap" rel="stylesheet">
    <style>
        .font-heading { font-family: 'Cormorant Garamond', serif; }
        .font-body { font-family: 'Montserrat', sans-serif; }
        .glass-nav { background: rgba(12, 10, 9, 0.9); backdrop-filter: blur(12px); border-bottom: 1px solid rgba(255, 255, 255, 0.05); }
    </style>
</head>
<body class="bg-stone-950 text-stone-100 font-body min-h-screen">
    <!-- Admin Navigation -->
    <nav class="fixed w-full z-50 glass-nav py-4">
        <div class="max-w-7xl mx-auto px-6 flex justify-between items-center">
            <div class="flex items-center gap-4">
                <a href="/" class="text-2xl font-heading font-bold tracking-wider text-white flex items-center gap-2 group">
                    <i data-lucide="compass" class="w-6 h-6 text-amber-200 group-hover:rotate-45 transition-transform duration-500"></i>
                    ODYSSEY
                </a>
                <span class="text-xs uppercase tracking-wider px-3 py-1 bg-amber-400/20 text-amber-300 rounded-full border border-amber-400/30">Admin</span>
            </div>
            <div class="flex items-center gap-6">
                <a href="/Admin" class="text-stone-400 hover:text-white text-sm flex items-center gap-2"><i data-lucide="layout-dashboard" class="w-4 h-4"></i>Dashboard</a>
                <a href="/Admin/Packages" class="text-amber-200 text-sm flex items-center gap-2"><i data-lucide="package" class="w-4 h-4"></i>Packages</a>
                <a href="/Admin/Orders" class="text-stone-400 hover:text-white text-sm flex items-center gap-2"><i data-lucide="shopping-cart" class="w-4 h-4"></i>Orders</a>
                <a href="/Admin/Users" class="text-stone-400 hover:text-white text-sm flex items-center gap-2"><i data-lucide="users" class="w-4 h-4"></i>Users</a>
                <a href="/" class="text-stone-400 hover:text-white text-sm flex items-center gap-2"><i data-lucide="globe" class="w-4 h-4"></i>View Site</a>
            </div>
        </div>
    </nav>

    <main class="pt-24 pb-12 px-6">
        <div class="max-w-7xl mx-auto">
            <!-- Header -->
            <div class="flex justify-between items-center mb-8">
                <div>
                    <h1 class="text-4xl font-heading text-white mb-2">Travel Packages</h1>
                    <p class="text-stone-400">Manage your travel destinations</p>
                </div>
                <a href="/Admin/Packages/Create" class="px-6 py-3 bg-amber-200 hover:bg-amber-100 text-stone-900 rounded font-bold flex items-center gap-2 transition-colors">
                    <i data-lucide="plus" class="w-5 h-5"></i>
                    Add Package
                </a>
            </div>
            
            <!-- Season Filters -->
            <div class="flex gap-2 mb-6 flex-wrap">
                <a href="/Admin/Packages" class="px-4 py-2 rounded-full text-sm transition-colors @(string.IsNullOrEmpty(Model.SeasonFilter) ? "bg-amber-200 text-stone-900 font-semibold" : "bg-white/10 text-white hover:bg-white/20")">
                    All Seasons
                </a>
                <a href="/Admin/Packages?season=spring" class="px-4 py-2 rounded-full text-sm transition-colors flex items-center gap-1 @(Model.SeasonFilter == "spring" ? "bg-pink-400 text-stone-900 font-semibold" : "bg-white/10 text-white hover:bg-white/20")">
                    <span class="text-base">&#x1F338;</span> Spring
                </a>
                <a href="/Admin/Packages?season=summer" class="px-4 py-2 rounded-full text-sm transition-colors flex items-center gap-1 @(Model.SeasonFilter == "summer" ? "bg-amber-400 text-stone-900 font-semibold" : "bg-white/10 text-white hover:bg-white/20")">
                    <span class="text-base">&#x2600;</span> Summer
                </a>
                <a href="/Admin/Packages?season=autumn" class="px-4 py-2 rounded-full text-sm transition-colors flex items-center gap-1 @(Model.SeasonFilter == "autumn" ? "bg-orange-400 text-stone-900 font-semibold" : "bg-white/10 text-white hover:bg-white/20")">
                    <span class="text-base">&#x1F342;</span> Autumn
                </a>
                <a href="/Admin/Packages?season=winter" class="px-4 py-2 rounded-full text-sm transition-colors flex items-center gap-1 @(Model.SeasonFilter == "winter" ? "bg-cyan-400 text-stone-900 font-semibold" : "bg-white/10 text-white hover:bg-white/20")">
                    <span class="text-base">&#x2744;</span> Winter
                </a>
            </div>
            
            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="bg-green-500/20 border border-green-500/50 text-green-200 px-4 py-3 rounded mb-6">
                    @Model.SuccessMessage
                </div>
            }
            
            <!-- Packages Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var package in Model.FilteredPackages)
                {
                    var seasonColorClass = package.Season switch
                    {
                        "spring" => "bg-pink-400/20 text-pink-300 border-pink-400/50",
                        "summer" => "bg-amber-400/20 text-amber-300 border-amber-400/50",
                        "autumn" => "bg-orange-400/20 text-orange-300 border-orange-400/50",
                        "winter" => "bg-cyan-400/20 text-cyan-300 border-cyan-400/50",
                        _ => "bg-stone-400/20 text-stone-300 border-stone-400/50"
                    };
                    
                    <div class="bg-stone-900/50 backdrop-blur-xl rounded-lg border border-white/10 overflow-hidden @(package.IsActive ? "" : "opacity-50")">
                        <div class="relative h-48">
                            <img src="@package.ImageUrl" alt="@package.Destination" class="w-full h-full object-cover">
                            <div class="absolute top-3 left-3 flex gap-2">
                                <span class="text-xs uppercase tracking-wider px-2 py-1 rounded-full border backdrop-blur-sm @seasonColorClass">
                                    @package.Season
                                </span>
                                @if (!package.IsActive)
                                {
                                    <span class="text-xs uppercase tracking-wider px-2 py-1 rounded-full bg-red-500/80 text-white">
                                        Inactive
                                    </span>
                                }
                            </div>
                            <div class="absolute top-3 right-3">
                                <span class="text-sm font-bold px-3 py-1 rounded-full bg-black/50 backdrop-blur-sm text-white">
                                    $@package.Price.ToString("N0")
                                </span>
                            </div>
                        </div>
                        <div class="p-4">
                            <h3 class="text-xl font-heading text-white mb-1">@package.Destination</h3>
                            <p class="text-stone-400 text-sm mb-4 line-clamp-2">@package.Description</p>
                            
                            <div class="flex items-center justify-between text-xs text-stone-500 mb-4">
                                <span>@package.DefaultStartDate.ToString("MMM d") - @package.DefaultEndDate.ToString("MMM d")</span>
                                <span>@package.DurationDays days</span>
                            </div>
                            
                            <div class="flex gap-2">
                                <a href="/Admin/Packages/Edit/@package.Id" class="flex-1 px-4 py-2 bg-white/10 hover:bg-white/20 rounded text-center text-sm transition-colors">
                                    Edit
                                </a>
                                <form method="post" asp-page-handler="ToggleStatus" class="flex-1">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="packageId" value="@package.Id" />
                                    <input type="hidden" name="season" value="@Model.SeasonFilter" />
                                    <button type="submit" class="w-full px-4 py-2 @(package.IsActive ? "bg-yellow-500/20 text-yellow-300 hover:bg-yellow-500/30" : "bg-green-500/20 text-green-300 hover:bg-green-500/30") rounded text-sm transition-colors">
                                        @(package.IsActive ? "Deactivate" : "Activate")
                                    </button>
                                </form>
                                <form method="post" asp-page-handler="Delete" class="flex-shrink-0" onsubmit="return confirm('Are you sure you want to delete this package?')">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="packageId" value="@package.Id" />
                                    <input type="hidden" name="season" value="@Model.SeasonFilter" />
                                    <button type="submit" class="px-4 py-2 bg-red-500/20 text-red-300 hover:bg-red-500/30 rounded text-sm transition-colors">
                                        <i data-lucide="trash-2" class="w-4 h-4"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            @if (!Model.FilteredPackages.Any())
            {
                <div class="text-center py-16">
                    <i data-lucide="package" class="w-16 h-16 text-stone-700 mx-auto mb-4"></i>
                    <h2 class="text-2xl font-heading text-stone-400 mb-2">No packages found</h2>
                    <p class="text-stone-500 mb-6">Create your first travel package</p>
                    <a href="/Admin/Packages/Create" class="inline-block px-6 py-3 bg-amber-200 hover:bg-amber-100 rounded text-stone-900 font-bold transition-colors">
                        Add Package
                    </a>
                </div>
            }
        </div>
    </main>
    
    <script>
        lucide.createIcons();
    </script>
</body>
</html>
