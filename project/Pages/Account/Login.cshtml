@page
@model project.Pages.Account.LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | Odyssey</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;1,400&family=Montserrat:wght@200;300;400;500;600&display=swap" rel="stylesheet">
    <style>
        .font-heading { font-family: 'Cormorant Garamond', serif; }
        .font-body { font-family: 'Montserrat', sans-serif; }
    </style>
</head>
<body class="bg-stone-950 text-stone-100 font-body min-h-screen flex items-center justify-center p-4">
    <div class="w-full max-w-md">
        <!-- Logo -->
        <div class="text-center mb-8">
            <a href="/" class="text-3xl font-heading font-bold tracking-wider text-white inline-flex items-center gap-2">
                <i data-lucide="compass" class="w-8 h-8 text-amber-200"></i>
                ODYSSEY
            </a>
            <p class="text-stone-400 mt-2">Welcome back, traveler</p>
        </div>
        
        <!-- Login Form -->
        <div class="bg-stone-900/50 backdrop-blur-xl rounded-lg border border-white/10 p-8">
            <h1 class="text-2xl font-heading text-white mb-6">Sign In</h1>
            
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="bg-red-500/20 border border-red-500/50 text-red-200 px-4 py-3 rounded mb-6">
                    @Model.ErrorMessage
                </div>
            }
            
            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="bg-green-500/20 border border-green-500/50 text-green-200 px-4 py-3 rounded mb-6">
                    @Model.SuccessMessage
                </div>
            }
            
            <form method="post" class="space-y-4">
                @Html.AntiForgeryToken()
                
                <div>
                    <label class="block text-xs uppercase tracking-wider text-stone-400 mb-2">Email Address</label>
                    <input type="email" asp-for="Input.Email" required 
                           class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded focus:border-amber-400 focus:bg-white/10 outline-none text-white transition-all placeholder:text-stone-600" 
                           placeholder="you@example.com">
                    <span asp-validation-for="Input.Email" class="text-red-400 text-xs mt-1 block"></span>
                </div>
                
                <div>
                    <label class="block text-xs uppercase tracking-wider text-stone-400 mb-2">Password</label>
                    <input type="password" asp-for="Input.Password" required 
                           class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded focus:border-amber-400 focus:bg-white/10 outline-none text-white transition-all placeholder:text-stone-600" 
                           placeholder="••••••••">
                    <span asp-validation-for="Input.Password" class="text-red-400 text-xs mt-1 block"></span>
                </div>
                
                <div class="flex items-center justify-between">
                    <label class="flex items-center gap-2 text-stone-400 text-sm cursor-pointer">
                        <input type="checkbox" asp-for="Input.RememberMe" class="rounded bg-white/5 border-white/10">
                        Remember me
                    </label>
                </div>
                
                <button type="submit" class="w-full px-6 py-3 bg-amber-200 hover:bg-amber-100 rounded text-stone-900 font-bold tracking-wide transition-all">
                    Sign In
                </button>
            </form>
            
            <div class="mt-6 text-center">
                <p class="text-stone-400 text-sm">
                    Don't have an account? 
                    <a href="/Account/Register" class="text-amber-200 hover:text-amber-100 transition-colors">Create one</a>
                </p>
            </div>
        </div>
        
        <div class="text-center mt-6">
            <a href="/" class="text-stone-500 hover:text-stone-300 text-sm transition-colors">
                ? Back to home
            </a>
        </div>
    </div>
    
    <script>
        lucide.createIcons();
    </script>
</body>
</html>
