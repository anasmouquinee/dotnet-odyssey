@page "{id:int}"
@model project.Pages.Bookings.EditModel
@{
    Layout = null;
    ViewData["Title"] = "Edit Booking";
}
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Booking | Odyssey</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;1,400&family=Montserrat:wght@200;300;400;500;600&display=swap" rel="stylesheet">
    <style>
        .font-heading { font-family: 'Cormorant Garamond', serif; }
        .font-body { font-family: 'Montserrat', sans-serif; }
        
        /* Glass effect for navbar */
        .glass-nav {
            background: rgba(12, 10, 9, 0.7);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }
    </style>
</head>
<body class="bg-stone-950 text-stone-100 font-body min-h-screen">
    <!-- Navigation - Matching Main Page -->
    <nav class="fixed w-full z-50 glass-nav py-4">
        <div class="max-w-7xl mx-auto px-6 flex justify-between items-center">
            <a href="/" class="text-2xl font-heading font-bold tracking-wider text-white flex items-center gap-2 group">
                <i data-lucide="compass" class="w-6 h-6 text-amber-200 group-hover:rotate-45 transition-transform duration-500"></i>
                ODYSSEY
            </a>
            
            <div class="flex items-center gap-6">
                <a href="/Bookings" class="text-amber-200 hover:text-amber-100 text-sm transition-colors flex items-center gap-2">
                    <i data-lucide="arrow-left" class="w-4 h-4"></i>
                    Back to Bookings
                </a>
            </div>
        </div>
    </nav>

    <main class="pt-24 pb-12 px-6">
        <div class="max-w-2xl mx-auto">
            @if (Model.Booking == null)
            {
                <div class="text-center py-16">
                    <h2 class="text-2xl font-heading text-stone-400 mb-4">Booking not found</h2>
                    <a href="/Bookings" class="text-amber-200 hover:text-amber-100">Back to bookings</a>
                </div>
            }
            else
            {
                <div class="bg-stone-900/50 backdrop-blur-xl rounded-lg border border-white/10 overflow-hidden">
                    <!-- Header with image -->
                    <div class="relative h-48">
                        <img src="@Model.Booking.TravelPackage.ImageUrl" alt="@Model.Booking.TravelPackage.Destination" 
                             class="w-full h-full object-cover">
                        <div class="absolute inset-0 bg-gradient-to-t from-stone-900 to-transparent"></div>
                        <div class="absolute bottom-4 left-6">
                            <span class="text-xs uppercase tracking-wider px-2 py-1 rounded-full bg-white/10 text-white mb-2 inline-block">
                                @Model.Booking.TravelPackage.Season.ToUpper()
                            </span>
                            <h1 class="text-3xl font-heading text-white">@Model.Booking.TravelPackage.Destination</h1>
                            <p class="text-stone-300">@Model.Booking.TravelPackage.Description</p>
                        </div>
                    </div>
                    
                    <!-- Edit Form -->
                    <div class="p-6">
                        <h2 class="text-xl font-heading text-white mb-6">Modify Your Booking</h2>
                        
                        <form method="post" class="space-y-4">
                            <input type="hidden" asp-for="Booking.Id" />
                            
                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-xs uppercase tracking-wider text-stone-400 mb-2">Start Date</label>
                                    <input type="date" asp-for="Input.StartDate" required
                                           class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded focus:border-amber-400 outline-none text-white">
                                </div>
                                <div>
                                    <label class="block text-xs uppercase tracking-wider text-stone-400 mb-2">End Date</label>
                                    <input type="date" asp-for="Input.EndDate" required
                                           class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded focus:border-amber-400 outline-none text-white">
                                </div>
                            </div>
                            
                            <div>
                                <label class="block text-xs uppercase tracking-wider text-stone-400 mb-2">Number of Guests</label>
                                <select asp-for="Input.NumberOfGuests" required
                                        class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded focus:border-amber-400 outline-none text-white">
                                    @for (int i = 1; i <= 10; i++)
                                    {
                                        <option value="@i">@i @(i == 1 ? "Guest" : "Guests")</option>
                                    }
                                </select>
                            </div>
                            
                            <div>
                                <label class="block text-xs uppercase tracking-wider text-stone-400 mb-2">Special Requests</label>
                                <textarea asp-for="Input.SpecialRequests" rows="3"
                                          class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded focus:border-amber-400 outline-none text-white resize-none"
                                          placeholder="Any special requirements..."></textarea>
                            </div>
                            
                            <div class="bg-stone-800/50 rounded p-4">
                                <div class="flex justify-between items-center">
                                    <span class="text-stone-400">Price per person</span>
                                    <span class="text-white">$@Model.Booking.TravelPackage.Price.ToString("N0")</span>
                                </div>
                                <div class="flex justify-between items-center mt-2 pt-2 border-t border-white/10">
                                    <span class="text-white font-medium">Estimated Total</span>
                                    <span class="text-xl font-heading text-amber-200" id="estimatedTotal">
                                        $@((Model.Booking.TravelPackage.Price * Model.Input.NumberOfGuests).ToString("N0"))
                                    </span>
                                </div>
                            </div>
                            
                            <div class="flex gap-3 pt-4">
                                <a href="/Bookings" class="flex-1 px-6 py-3 border border-white/30 rounded text-white text-center hover:bg-white/10 transition-all font-medium">
                                    Cancel
                                </a>
                                <button type="submit" class="flex-1 px-6 py-3 bg-amber-200 hover:bg-amber-100 rounded text-stone-900 font-bold transition-all">
                                    Save Changes
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            }
        </div>
    </main>
    
    <script>
        lucide.createIcons();
        
        // Update estimated total when guests change
        const guestsSelect = document.querySelector('select[name="Input.NumberOfGuests"]');
        const pricePerPerson = @Model.Booking?.TravelPackage.Price ?? 0;
        
        if (guestsSelect) {
            guestsSelect.addEventListener('change', function() {
                const total = pricePerPerson * parseInt(this.value);
                document.getElementById('estimatedTotal').textContent = '$' + total.toLocaleString();
            });
        }
    </script>
</body>
</html>
