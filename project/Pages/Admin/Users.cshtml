@page
@model project.Pages.Admin.UsersModel
@{
    Layout = null;
    ViewData["Title"] = "Manage Users";
}
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Users | Odyssey Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;1,400&family=Montserrat:wght@200;300;400;500;600&display=swap" rel="stylesheet">
    <style>
        .font-heading { font-family: 'Cormorant Garamond', serif; }
        .font-body { font-family: 'Montserrat', sans-serif; }
        .glass-nav { background: rgba(12, 10, 9, 0.9); backdrop-filter: blur(12px); border-bottom: 1px solid rgba(255, 255, 255, 0.05); }
    </style>
</head>
<body class="bg-stone-950 text-stone-100 font-body min-h-screen">
    <!-- Admin Navigation -->
    <nav class="fixed w-full z-50 glass-nav py-4">
        <div class="max-w-7xl mx-auto px-6 flex justify-between items-center">
            <div class="flex items-center gap-4">
                <a href="/" class="text-2xl font-heading font-bold tracking-wider text-white flex items-center gap-2 group">
                    <i data-lucide="compass" class="w-6 h-6 text-amber-200 group-hover:rotate-45 transition-transform duration-500"></i>
                    ODYSSEY
                </a>
                <span class="text-xs uppercase tracking-wider px-3 py-1 bg-amber-400/20 text-amber-300 rounded-full border border-amber-400/30">Admin</span>
            </div>
            <div class="flex items-center gap-6">
                <a href="/Admin" class="text-stone-400 hover:text-white text-sm flex items-center gap-2"><i data-lucide="layout-dashboard" class="w-4 h-4"></i>Dashboard</a>
                <a href="/Admin/Packages" class="text-stone-400 hover:text-white text-sm flex items-center gap-2"><i data-lucide="package" class="w-4 h-4"></i>Packages</a>
                <a href="/Admin/Orders" class="text-stone-400 hover:text-white text-sm flex items-center gap-2"><i data-lucide="shopping-cart" class="w-4 h-4"></i>Orders</a>
                <a href="/Admin/Users" class="text-amber-200 text-sm flex items-center gap-2"><i data-lucide="users" class="w-4 h-4"></i>Users</a>
                <a href="/" class="text-stone-400 hover:text-white text-sm flex items-center gap-2"><i data-lucide="globe" class="w-4 h-4"></i>View Site</a>
            </div>
        </div>
    </nav>

    <main class="pt-24 pb-12 px-6">
        <div class="max-w-7xl mx-auto">
            <!-- Header -->
            <div class="mb-8">
                <h1 class="text-4xl font-heading text-white mb-2">User Management</h1>
                <p class="text-stone-400">Manage user accounts and permissions</p>
            </div>
            
            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="bg-green-500/20 border border-green-500/50 text-green-200 px-4 py-3 rounded mb-6">
                    @Model.SuccessMessage
                </div>
            }
            
            <!-- Users Table -->
            <div class="bg-stone-900/50 backdrop-blur-xl rounded-lg border border-white/10 overflow-hidden">
                <table class="w-full">
                    <thead>
                        <tr class="border-b border-white/10">
                            <th class="text-left p-4 text-xs uppercase tracking-wider text-stone-400">User</th>
                            <th class="text-left p-4 text-xs uppercase tracking-wider text-stone-400">Email</th>
                            <th class="text-left p-4 text-xs uppercase tracking-wider text-stone-400">Phone</th>
                            <th class="text-left p-4 text-xs uppercase tracking-wider text-stone-400">Joined</th>
                            <th class="text-left p-4 text-xs uppercase tracking-wider text-stone-400">Role</th>
                            <th class="text-left p-4 text-xs uppercase tracking-wider text-stone-400">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr class="border-b border-white/5 hover:bg-white/5 transition-colors">
                                <td class="p-4">
                                    <div class="flex items-center gap-3">
                                        <div class="w-10 h-10 rounded-full bg-gradient-to-br from-amber-400 to-amber-600 flex items-center justify-center text-sm font-bold text-stone-900">
                                            @user.FirstName.Substring(0, 1)@user.LastName.Substring(0, 1)
                                        </div>
                                        <div>
                                            <div class="text-white font-medium">@user.FirstName @user.LastName</div>
                                            <div class="text-xs text-stone-500">ID: @user.Id</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="p-4 text-stone-300">@user.Email</td>
                                <td class="p-4 text-stone-400">@(user.PhoneNumber ?? "—")</td>
                                <td class="p-4 text-stone-400">@user.CreatedAt.ToString("MMM d, yyyy")</td>
                                <td class="p-4">
                                    @if (user.IsAdmin)
                                    {
                                        <span class="text-xs uppercase tracking-wider px-2 py-1 rounded-full bg-amber-400/20 text-amber-300 border border-amber-400/50">
                                            Admin
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-xs uppercase tracking-wider px-2 py-1 rounded-full bg-stone-400/20 text-stone-300 border border-stone-400/50">
                                            Customer
                                        </span>
                                    }
                                </td>
                                <td class="p-4">
                                    <form method="post" asp-page-handler="ToggleAdmin">
                                        <input type="hidden" name="userId" value="@user.Id" />
                                        <button type="submit" class="px-3 py-1 rounded text-xs transition-colors @(user.IsAdmin ? "bg-red-500/20 text-red-300 hover:bg-red-500/30" : "bg-green-500/20 text-green-300 hover:bg-green-500/30")">
                                            @(user.IsAdmin ? "Revoke Admin" : "Make Admin")
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </main>
    
    <script>
        lucide.createIcons();
    </script>
</body>
</html>
