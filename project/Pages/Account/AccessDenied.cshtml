@page
@model project.Pages.Account.AccessDeniedModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Access Denied | Odyssey</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;1,400&family=Montserrat:wght@200;300;400;500;600&display=swap" rel="stylesheet">
    <style>
        .font-heading { font-family: 'Cormorant Garamond', serif; }
        .font-body { font-family: 'Montserrat', sans-serif; }
    </style>
</head>
<body class="bg-stone-950 text-stone-100 font-body min-h-screen flex items-center justify-center p-4">
    <div class="text-center max-w-md">
        <i data-lucide="lock" class="w-20 h-20 text-red-400 mx-auto mb-6"></i>
        <h1 class="text-4xl font-heading text-white mb-4">Access Denied</h1>
        <p class="text-stone-400 mb-8">You don't have permission to access this page.</p>
        <div class="flex gap-4 justify-center">
            <a href="/Account/Login" class="px-6 py-3 bg-amber-200 hover:bg-amber-100 rounded text-stone-900 font-bold transition-all">
                Login
            </a>
            <a href="/" class="px-6 py-3 border border-white/30 rounded text-white hover:bg-white/10 transition-all">
                Go Home
            </a>
        </div>
    </div>
    <script>
        lucide.createIcons();
    </script>
</body>
</html>
